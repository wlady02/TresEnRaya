package sistemasdistrubuidos.tresenraya.server.logic;

import java.io.IOException;
import java.net.ServerSocket;

public class Orb {
	private int port;

	public Orb(int port) {
		this.port = port;
	}

	public void start() throws IOException {
		ServerSocket listener = new ServerSocket(port);
		
		try{
			while(true){
				
			}
		} finally{
			listener.close();
		}
	}
}
